{
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "6.0.1",
    "daisyui": "4.4.24",
    "flowbite": "2.5.1",
    "htmx.org": "2.0.2",
    "npm-watch": "0.11.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "simple-datatables": "^9.0.4",
    "tailwindcss": "3.4.10"
  },
  "watch": {
    "build:tailwindcss": {
      "patterns": [
        "../src/static/**/*.{html,js}",
        "../src/templates/**/*.{html,js}"
      ],
      "extensions": "html,js",
      "quiet": false
    }
  },
  "scripts": {
    "dev": "npx tailwindcss -i ./styles/app.css -o ../src/static/css/app.css --watch",
    "build:tailwindcss": "postcss ../src/static/css/tailwind-input.css -o ../src/static/css/tailwind-output.css",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js ../src/static/js/htmx.min.js",
    "build:daisyui": "cp node_modules/daisyui/dist/full.css ../src/static/css/daisyui.css",
    "build:flowbite": "cp node_modules/flowbite/dist/flowbite.min.js  ../src/static/js/flowbite.min.js",
    "build:datatable": "cp node_modules/simple-datatables/dist/umd/simple-datatables.js  ../src/static/js/simple-datatables.js",
    "watch:tailwindcss": "npm-watch build:tailwindcss"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14"
  }
}
